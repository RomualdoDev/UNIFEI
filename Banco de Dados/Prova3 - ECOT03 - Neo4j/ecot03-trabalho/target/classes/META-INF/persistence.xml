<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
  http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
	version="2.1">
	<persistence-unit name="presidentePU"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>br.edu.unifei;ecot13.presidente.Pessoa</class>
		<class>br.edu.unifei;ecot13.presidente.PresidenteBrasil</class>
		<class>br.edu.unifei;ecot13.presidente.Lei</class>
		<class>br.edu.unifei;ecot13.presidente.Pronunciamento</class>
		<class>br.edu.unifei;ecot13.presidente.Ministro</class>
		<class>br.edu.unifei;ecot13.presidente.Cidadania</class>
		<class>br.edu.unifei;ecot13.presidente.Cultura</class>
		<class>br.edu.unifei;ecot13.presidente.Economia</class>
		<class>br.edu.unifei;ecot13.presidente.Educacao</class>
		<class>br.edu.unifei;ecot13.presidente.Justica</class>
		<class>br.edu.unifei;ecot13.presidente.Turismo</class>
		<class>br.edu.unifei;ecot13.presidente.Secretario</class>
		<class>br.edu.unifei;ecot13.presidente.DistribuicaoDinheiro</class>
		<class>br.edu.unifei;ecot13.presidente.Orcamento</class>
		<class>br.edu.unifei;ecot13.presidente.Estado</class>
		<class>br.edu.unifei;ecot13.presidente.Amazonas</class>
		<class>br.edu.unifei;ecot13.presidente.Bahia</class>
		<class>br.edu.unifei;ecot13.presidente.MinasGerais</class>
		<class>br.edu.unifei;ecot13.presidente.SaoPaulo</class>
		<class>br.edu.unifei;ecot13.presidente.RioDeJaneiro</class>
		<class>br.edu.unifei;ecot13.presidente.Pernambuco</class>
		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/presidente?zeroDateTimeBehavior=convertToNull" />
			<property name="javax.persistence.jdbc.user" value="presidente" />
			<property name="javax.persistence.jdbc.driver"
				value="org.mariadb.jdbc.Driver" />
			<property name="javax.persistence.jdbc.password" value="presidente" />
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MariaDBDialect" />
			 
			<property name="javax.persistence.schema-generation.database.action"
				value="create" /> 
			
		</properties>
	</persistence-unit>
</persistence>
